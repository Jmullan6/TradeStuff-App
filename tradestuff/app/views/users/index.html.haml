%h1 All Users

%table#users
  %thead
    %tr
      %th First Name
      %th Last Name
      %th Email
      %th Phone Number
      %th City
  %tbody
    - @users.each do |user|
      %tr
        %td= user.first_name 
        %td= user.last_name
        %td= user.email
        %td= user.phone_number
        %td= user.city
        %td= link_to "More about #{user.first_name}", user_path(user)


